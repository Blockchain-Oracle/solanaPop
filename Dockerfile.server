FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install pnpm and dependencies
RUN npm install -g pnpm && \
    pnpm install

# Copy application code
COPY . .

# Build the application
RUN pnpm build

# Expose the server port
EXPOSE 8081

# Run the server
CMD ["node", "dist/index.js"] 